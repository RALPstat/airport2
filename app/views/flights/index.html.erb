<h1 style="text-align: center">Listing Flights</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-striped">
        <thead>
          <tr> 
            <th colspan="4" style="text-align: center; font-size: 24px">Departures</th>
          </tr>
          <tr>
            <th>Number</th>
            <th>Airline</th>
            <!--th>Arrival time</th-->
            <!--th>Arrival status</th-->
            <th>Date</th>
            <th>Status</th>
            <th></th>
            <!--th colspan="3"></th-->
          </tr>
        </thead>

        <tbody>
          <% @flights.each do |flight| %>
          <tr>
            <td><%= flight.number %></td>
            <td><%= flight.airline.name %></td>
              <!--td><%# flight.arrival.date %></td>
              <td><%# flight.arrival.status %></td-->
                <td><%= flight.departure.date %></td>
                <td><%= flight.departure.status %></td>
                <td><%= link_to "Passengers", flight_passengers_path(flight_id: flight.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-xs-6">
          <table class="table table-striped">
            <thead>
              <tr>
                <th colspan="4" style="text-align: center; font-size: 24px">Arrivals</th>
              </tr>
              <tr>
                <th>Number</th>
                <th>Airline</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            <!--th>Departure time</th>
            <th>Departure status</th>
            <th colspan="3"></th-->
            </tr>
          </thead>
          <tbody>
            <% @flights.each do |flight| %>
            <tr>
              <td><%= flight.number %></td>
              <td><%= flight.airline.name %></td>
              <td><%= flight.arrival.date %></td>
              <td><%= flight.arrival.status %></td>
              <td><%= link_to "Passengers", flight_passengers_path(flight_id: flight.id) %></td>
              <!--td><%# flight.departure.date %></td>
              <td><%# flight.departure.status %></td-->
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>  
    </div>


